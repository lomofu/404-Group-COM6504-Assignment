      "url": "http://localhost:3000/",
      "description": "Local server"
    },
    {
      "url": "http:/mission.lomofu.com",
      "description": "Testing server"
    }
  ],
  "paths": {
    "/api/story": {
      "post": {
        "tags": ["story"],
        "description": "create a new story",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/StoryUpload"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successfully create new story",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Success"
                },
                "example": {
                  "id": "62631d670c7594c8a76559a6"
                }
              }
            }
          },
          "400": {
            "description": "Missing parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Miss the title value"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Server error, insert failed! Please try again!"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["story"],
        "description": "get story details by id",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "description": "story id",
              "example": "62631d670c7594c8a76559a6"
            },
            "allowEmptyValue": true
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully get story details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Story"
                },
                "example": {
                  "_id": "62631d670c7594c8a76559a6",
                  "title": "Find clues in Sheffield Library",
                  "author": "Luna",
                  "description": "This is Diamond library at the University of Sheffield. I hid a clue under one of the desks in the library. Please find it.",
                  "image": "https://a0.muscache.com/im/pictures/09efb5fc-7bf1-44c0-b0ef-241a38533e67.jpg?im_w=1680",
                  "createTime": "22/04/2022 22:25",
                  "delete": false,
                  "rooms": 0,
                  "__v": 0
                }
              }
            }
          },
          "400": {
            "description": "Missing parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Miss values"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Server error, insert failed! Please try again!"
                }
              }
            }
          }
        }
      }
    },
    "/api/story/list": {
      "get": {
        "tags": ["story"],
        "description": "get story list",
        "responses": {
          "200": {
            "description": "Successfully get stories list",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StoryList"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Server error"
                }
              }
            }
          }
        }
      }
    },
    "/api/room": {
      "post": {
        "tags": ["room"],
        "description": "create a new room",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RoomUpload"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successfully create new room",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Success"
                },
                "example": {
                  "id": "626ea4478e13852ef2d5403f"
                }
              }
            }
          },
          "400": {
            "description": "Missing parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Miss value"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Server error, insert failed! Please try again!"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["room"],
        "description": "get room details by id",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "description": "room id",
              "example": "626ea4478e13852ef2d5403f"
            },
            "allowEmptyValue": true
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully get room details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Room"
                },
                "example": {
                  "roomId": "626ea4478e13852ef2d5403f",
                  "roomName": "Test Room",
                  "roomDescription": "For test only.",
                  "roomCreateTime": "1/05/2022 16:16",
                  "roomDelete": false,
                  "roomMembers": 0,
                  "storyId": "626ea008483d2eb1e44c3875",
                  "storyTitle": "Find clues in Sheffield Library",
                  "imageUrl": "https://a0.muscache.com/im/pictures/09efb5fc-7bf1-44c0-b0ef-241a38533e67.jpg?im_w=1680"
                }
              }
            }
          },
          "400": {
            "description": "Missing parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Miss values"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "message": "Server error, insert failed! Please try again!"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Story": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "description": "story id",
            "example": "62631d670c7594c8a76559a6"
          },
          "title": {
            "type": "string",
            "description": "story title",
            "example": "Find clues in Sheffield Library"
          },
          "author": {
            "type": "string",
            "example": "Luna"
          },
          "description": {
            "type": "string",
            "description": "story description",
            "example": "This is Diamond library at the University of Sheffield. I hid a clue under one of the desks in the library. Please find it."
          },
          "image": {
            "type": "string",
            "description": "image url or uploaded",
            "example": "https://a0.muscache.com/im/pictures/09efb5fc-7bf1-44c0-b0ef-241a38533e67.jpg?im_w=1680"
          },
          "createTime": {
            "type": "string",
            "description": "story create time",
            "example": "22/04/2022 22:25"
          },
          "delete": {
            "type": "boolean",
            "description": "story delete state",
            "example": "false"
          },
          "rooms": {
            "type": "number",
            "description": "story rooms",
            "example": "0"
          }
        }
      },
      "StoryUpload": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "story title",
            "example": "Find clues in Sheffield Library"
          },
          "author": {
            "type": "string",
            "example": "Luna"
          },
          "description": {
            "type": "string",
            "description": "story description",
            "example": "This is Diamond library at the University of Sheffield. I hid a clue under one of the desks in the library. Please find it."
          },
          "image": {
            "type": "string",
            "description": "image url or uploaded",
            "example": "https://a0.muscache.com/im/pictures/09efb5fc-7bf1-44c0-b0ef-241a38533e67.jpg?im_w=1680"
          }
        }
      },
      "StoryList": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "story": {
              "$ref": "#/components/schemas/Story"
            }
          }
        }
      },
      "Room": {
        "type": "object",
        "properties": {
          "roomId": {
            "type": "string",
            "description": "room id",
            "example": "626ea4478e13852ef2d5403f"
          },
          "storyId": {
            "type": "string",
            "description": "story id",
            "example": "626ea008483d2eb1e44c3875"
          },
          "roomName": {
            "type": "string",
            "example": "Room1"
          },
          "roomDescription": {
            "type": "string",
            "description": "room description",
            "example": "This is a room related to a story."
          },
          "roomCreateTime": {
            "type": "string",
            "description": "room create time",
            "example": "22/04/2022 22:25"
          },
          "roomDelete": {
            "type": "boolean",
            "description": "room delete state",
            "example": "false"
          },
          "roomMembers": {
            "type": "number",
            "description": "room members",
            "example": "0"
          },
          "storyTitle": {
            "type": "string",
            "description": "story title",
            "example": "Find clues in Sheffield Library"
          },
          "imageUrl": {
            "type": "string",
            "description": "story image url",
            "example": "https://a0.muscache.com/im/pictures/09efb5fc-7bf1-44c0-b0ef-241a38533e67.jpg?im_w=1680"
          }
        }
      },
      "RoomUpload": {
        "type": "object",
        "properties": {
          "storyId": {
            "type": "string",
            "description": "story id",
            "example": "626ea008483d2eb1e44c3875"
          },
          "name": {
            "type": "string",
            "example": "Room1"
          },
          "description": {
            "type": "string",
            "description": "room description",
            "example": "This is a room related to a story."
          }
        }
      },
      "RoomList": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "story": {
              "$ref": "#/components/schemas/Room"
            }
          }
        }
      },
      "Error": {
        "type": "string",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "Success": {
        "type": "string",
        "properties": {
          "id": {
            "type": "string"
          }
        }
      }
    }
  }
}
